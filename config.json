{
  "source": ["input/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    },
    "js": { 
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [{
        "destination": "tokens.js",
        "format": "javascript/module-flat"
      }]  
    } 
  }
}
   
  
